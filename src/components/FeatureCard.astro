---
export interface Props {
    title: string;
    body: string;
}

const {title, body} = Astro.props as Props;

---

<div class="p-4 transition bg-white border rounded-lg shadow-sm dark:bg-slate-800 dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-900">
    <h3 class="text-lg text-slate-900 dark:text-white">{title}</h3>
    <p class="text-slate-700 dark:text-slate-300">{body}</p>
</div>
